<h2><%= t('devise.login.title') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('devise.login.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.login.password') %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.login.remember') %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('devise.login.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
